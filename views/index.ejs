<div class="author">
  <h1 class="author__heading">Hi, I am Adil.</h1>
  <p class="author__body">Full Stack and Freelancer</p>
</div>

<img
  src="/img/hero-image.webp"
  alt="person looking out through window"
  class="hero-image"
  height="528"
  width="981"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% posts.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id  %>">
        <span><%= post.title %></span>
        <span class="article-list__date">
          <%= new Date(post.createdAt).toLocaleDateString('en-US', { day:
          'numeric', month: 'short', year: 'numeric' }) %>
        </span>
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
